{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "target": "esnext",
    "typeRoots": [
      "src/types"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*.d.ts",
    "*.js",
    ".*.js",
    "**/*.ts",
    "**/*.tsx",
    "next-plugins/**/*.js",
    "**/.eslintrc.js",
  ],
}
